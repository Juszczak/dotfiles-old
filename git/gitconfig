; ~/.gitignore
; git configuration file
; Adrian Juszczak
; adrian@juszczak.io
; https://git.io/juszczak

[user]
	name = Adrian Juszczak
	email = adrian@juszczak.io

[core]
	editor = vim
	pager = less -x2
	excludesfile = ~/.gitignore

; shortcuts
[alias]
	br = branch
	bv = branch -vv
	ca = commit --amend --no-edit
	ch = checkout
	cm = commit
	dc = diff --cached
	df = diff
	dt = difftool
	lgp = log -p
	mt = mergetool
	st = status
	stat = diff --stat
	sts = status -s -b
	who = shortlog -s --

; merge conflicts
[alias]
	eum = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; mvim `f`"
	aum = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; git add `f`"

; pretty log
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

; fetched commits
[alias]
	wc = log ORIG_HEAD.. --stat --no-merges

; whats new
[alias]
  yd = diff "@{yesterday}"

; danger!
[alias]
	undo = reset --hard

[color]
	ui = auto

[credential]
	helper = osxkeychain

[merge]
	tool = gvimdiff

[diff]
	tool = gvimdiff

[push]
	default = simple
