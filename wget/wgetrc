# wgetrc file
# ~/.wgetrc
# Adrian Juszczak
# https://git.io/juszczak

# add files extensions when lack
adjust_extension = on

# follow FTP links
follow_ftp = on

# no parent dirs when recirsive
no_parent = on

# retry event when refused
retry_connrefused = on

# ignore `robots.txt` and `robots nofollow`
robots = off

# print server responses
server_response = on

# 1 minute timing out
timeout = 60

# use server-provided date
timestamping = on

# sane retry when fails
tries = 3

# redirection URL as the local filename
trust_server_names = on

# disguise as IE 9 on Windows 7
user_agent = Mozilla/5.0 (compatible; MSIE 9.0; Windows NT 6.1; Trident/5.0)
