# ~/.inputrc
# Adrian Juszczk (https://github.com/juszczak/dotfiles)
# ref https://www.gnu.org/software/bash/manual/html_node/Readline-Init-File-Syntax.html#Readline-Init-File-Syntax

# completion options
set completion-ignore-case on
set page-completions on
set completion-query-items 200

# hyphen can be used to complete underscores
set completion-map-case on

set expand-tilde on

# unlimited history
set history-size -1

set mark-directories on

# mark modified history entries with *
set mark-modified-lines on

# match hidden files only after .
set match-hidden-files off

# complete common prefix
set menu-complete-display-prefix on

# page completions with more-like pager
set page-completions on

set print-completions-horizontally on

# show completions immediately if multiple matches
set show-all-if-ambiguous on
set show-all-if-unmodified on
set visible-stats on

set mark-symlinked-directories on

# enable coloring for tab completions (^4.3)
set colored-stats on

# dont echo ^C etc (^4.1)
set echo-control-characters off

# be vimish
set editing-mode vi

# insert as default
set keymap vi-insert

# search history
"\C-j": history-search-forward
"\C-k": history-search-backward

# cycle thru completions
"\C-n": menu-complete
"\C-p": menu-complete-backward

# go to normal mode (bind jj to esc)
"jj": "\e"

# include system-wide rc
# $include /etc/inputrc
